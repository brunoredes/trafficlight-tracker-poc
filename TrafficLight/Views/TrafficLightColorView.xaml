<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TrafficLight.Views.TrafficLightColorView"
             Title="TrafficLightColorView">
    <ScrollView>
        <VerticalStackLayout>
            <Label Text="Cor do farol: " />
            <Label Text="{Binding TrafficLightColor}"/>
            <Button Text="Iniciar o farol" Command="{Binding StartListeningCommand}"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>